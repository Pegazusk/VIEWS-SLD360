<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<ScrollPane style="-fx-background-color: #f5f5f5; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="com.asd360.SLD360.VidaSexual.SaludSexualController">
    <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-border-color: #007bff; -fx-border-radius: 10; -fx-padding: 30;">
        <!-- Título centrado -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #007bff; -fx-text-alignment: center; -fx-padding: 10;" text="Enfermedades de Transmisión Sexual (ETS)" />

        <!-- Scroll pane que se ajusta automáticamente al tamaño -->
        <ScrollPane fx:id="etsListContainer" fitToHeight="true" fitToWidth="true" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10;">
            <VBox fx:id="etsContainer" spacing="25" style="-fx-padding: 20; -fx-alignment: center;"/>
        </ScrollPane>
    </VBox>
</ScrollPane>
